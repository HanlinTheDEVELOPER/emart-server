generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String    @id @unique @default(uuid())
  email    String    @unique
  name     String?
  password String
  address  Address[]
}

model Address {
  id      String @id @unique @default(uuid())
  no      String
  street  String
  quarter String
  city    String
  state   String
  user    User   @relation(fields: [userId], references: [id])
  userId  String
}
